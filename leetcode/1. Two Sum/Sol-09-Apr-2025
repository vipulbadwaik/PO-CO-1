class Solution {
    public int[] twoSum(int[] nums, int target) {
         int n[] = new int[2];
        HashMap<Integer,Integer> map =  new HashMap<Integer,Integer>();
        for(int i=0;i<nums.length;i++){
            if(map.containsKey(target-nums[i])){
                n[1] = i;
                n[0] = map.get(target - nums[i]);
                return n;
            }
            map.put(nums[i],i);
        }
        return n;
    }
}